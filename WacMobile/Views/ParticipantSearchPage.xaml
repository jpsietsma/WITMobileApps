<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WacMobile.Views.ParticipantSearchPage">
    <ContentPage.Content>
        <StackLayout Margin="0,30,0,0" HorizontalOptions="Center">
            <Label Text="Choose a contact to view details:" FontSize="Large" />
            <StackLayout Orientation="Vertical">
                <ListView x:Name="ParticipantListView">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <StackLayout Orientation="Horizontal">
                                    <Label Text="{Binding GetNameLF}" />
                                </StackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <Button x:Name="participantSearchButton" Text="Get Details" />
            </StackLayout>            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>